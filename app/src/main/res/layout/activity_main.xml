<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <!-- LinearLayout lớn nằm dưới -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:elevation="10dp"
        android:gravity="center"
        android:background="@drawable/auth_border"
        android:layout_gravity="bottom"
        tools:targetApi="lollipop">

        <LinearLayout
            android:id="@+id/llHome"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/ivHome"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_navhomeselected"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSearch"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/ivSearch"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_navsearch"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llChart"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/ivChart"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_navchart"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMe"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/ivMe"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_navme"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:background="@drawable/add_border"
        android:id="@+id/ivAdd"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_navadd"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="50dp"
        android:elevation="15dp"
        android:padding="10dp"
        android:scaleType="centerCrop"/>

</FrameLayout>
